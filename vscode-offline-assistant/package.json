{
  "name": "vscode-offline-assistant",
  "displayName": "VSCode Offline Assistant",
  "description": "An offline coding assistant for VS Code that processes user queries without cloud dependency.",
  "version": "0.1.0",
  "publisher": "your-username",
  "engines": {
    "vscode": "^1.80.0"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "assistant.ask",
        "title": "Ask the Assistant"
      }
    ]
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --platform=node --external:vscode --format=cjs",
    "watch": "esbuild --watch src/extension.ts --bundle --outfile=dist/extension.js --platform=node --external:vscode --format=cjs"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}