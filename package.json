{
  "name": "astrelium",
  "displayName": "Astrelium",
  "version": "0.0.1",
  "publisher": "mdhammaduddin",
  "engines": {
    "vscode": "^1.80.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "astrelium-sidebar",
          "title": "Astrelium",
          "icon": "$(rocket)"
        }
      ]
    },
    "views": {
      "astrelium-sidebar": [
        {
          "type": "webview",
          "id": "astrelium.chatView",
          "name": "Astrelium Chat",
          "when": "true"
        },
        {
          "type": "webview",
          "id": "astrelium.comparisonView",
          "name": "AI Model Comparison",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "astrelium.openChat",
        "title": "Open Astrelium Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "astrelium.showComparison",
        "title": "Show AI Model Comparison",
        "icon": "$(graph)"
      },
      {
        "command": "astrelium.openComparisonDemo",
        "title": "Open Comparison Demo",
        "icon": "$(globe)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "astrelium.showComparison",
          "when": "true"
        },
        {
          "command": "astrelium.openComparisonDemo",
          "when": "true"
        }
      ],
      "view/title": [
        {
          "command": "astrelium.showComparison",
          "when": "view == astrelium.comparisonView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
